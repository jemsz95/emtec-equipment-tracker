<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>EMTEC - Equiment Tracker</display-name>
  <context-param>
    <param-name>webmaster</param-name>
    <param-value>myaddress@mycompany.com</param-value>
  </context-param>
  <servlet>
    <servlet-name>equipment</servlet-name>
    <servlet-class>Interfaces.EquipmentInterface</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>devices</servlet-name>
    <servlet-class>Interfaces.DevicesInterface</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>admins</servlet-name>
    <servlet-class>Interfaces.AdministratorsInterface</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>reports</servlet-name>
    <servlet-class>Interfaces.ReportsInterface</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>movementRecords</servlet-name>
    <servlet-class>Interfaces.MovementRecordsInterface</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>users</servlet-name>
    <servlet-class>Interfaces.UsersInterface</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>equipment</servlet-name>
    <url-pattern>/equipment</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>devices</servlet-name>
    <url-pattern>/devices</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>admins</servlet-name>
    <url-pattern>/admins</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>reports</servlet-name>
    <url-pattern>/reports</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>movementRecords</servlet-name>
    <url-pattern>/movement-records</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>users</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>    <!-- 30 minutes -->
  </session-config>
</web-app>
